@model IEnumerable<KinmuSample.Models.m_bumon>

@{
    int i = 0;
}

@Styles.Render("~/Content/bootstrap.min.css")
@Styles.Render("~/Content/style.css")
<div class="modal fade" id="kogamenModal" tabindex="-1" role="dialog" aria-labelledby="kogamenModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="kogamenModalLabel">会社選択</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
            </div>
            <div class="modal-body">
                <div style="padding: 20px;background: #DFF7FF;border-radius: 10px;">
                    <table>
                        <tr>
                            <td width="80">
                                <input type="button" id="bumon_modal" value="OK">
                            </td>
                            <td>
                                <input type="button" data-dismiss="modal" value="キャンセル" />
                            </td>
                        </tr>
                    </table>
                    <select name="bumon_code" id="bumon_modal_select" size="10" width="120">
                        <option value=""></option>
                        @foreach (var item in Model)
                        {
                            <option value="@item.bumon">@item.bumon</option>
                            i++;
                        }
                    </select>

                    <div>会社件数：@i 件</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#bumon_modal').click(function () {
        var bumon = $('#bumon_modal_select').val();
        $("#parameter").val(bumon);


        $('#kogamenModal').modal('hide');
    });
</script>